---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'

export interface Props {
  heading: string
  posts: Post[]
}

const { heading, posts } = Astro.props
---

<div class="blog-posts-link">
  <h2>{heading}</h2>
  {
    posts.length === 0 ? (
      <NoContents contents={posts} />
    ) : (
      <ul>
        {posts.map((post: Post) => (
          <li>
            <a
              href={getPostLink(post.Slug)}
              title={`${post.Icon?.Emoji || ''}${post.Title}`}
            >
              {post.Icon && post.Icon.Type === 'emoji' ? (
                <>
                  <span>{post.Icon.Emoji}</span>
                  {post.Title}
                </>
              ) : post.Icon && post.Icon.Type === 'external' ? (
                <>
                  <img
                    src={post.Icon.Url}
                    alt="Post title icon in a link list"
                  />
                  {post.Title}
                </>
              ) : (
                post.Title
              )}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .blog-posts-link {
    padding: 25px;
    border-bottom: 1px solid var(--border-light);
  }
  
  @media (max-width: 768px) {
    .blog-posts-link {
      padding: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .blog-posts-link {
      padding: 15px;
    }
  }
  .blog-posts-link:last-child {
    border-bottom: none;
  }
  .blog-posts-link h2 {
    margin: 0 0 20px 0;
    color: var(--fg);
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .blog-posts-link ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  .blog-posts-link ul li {
    margin-bottom: 8px;
  }
  .blog-posts-link ul li:last-child {
    margin-bottom: 0;
  }
  .blog-posts-link ul li a {
    display: flex;
    align-items: center;
    gap: 8px;
    border-radius: var(--radius);
    padding: 12px 16px;
    line-height: 1.4;
    color: var(--fg-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    background: var(--border-light);
    border: 1px solid transparent;
  }
  .blog-posts-link ul li a:hover {
    background: var(--accents-1);
    color: white;
    transform: translateX(4px);
    box-shadow: 0 2px 8px var(--shadow);
  }
  .blog-posts-link ul li a span,
  .blog-posts-link ul li a img {
    display: inline-block;
    flex-shrink: 0;
  }
  .blog-posts-link ul li a img {
    width: 1rem;
    height: 1rem;
    vertical-align: sub;
  }
</style>
